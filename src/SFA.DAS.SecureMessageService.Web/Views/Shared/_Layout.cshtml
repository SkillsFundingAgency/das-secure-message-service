<!DOCTYPE html>
<html lang="en">

<head>
    <title>Secure Message Service</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/main.css" media="screen" rel="stylesheet" />
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>

<body class="govuk-template__body {{ bodyClass }}">
    <script>
        document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');
    </script>

    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>

    <header class="govuk-header " role="banner" data-module="header">
        <div class="govuk-header__container govuk-width-container">
            <div class="govuk-header__content">
                <a href="/" class="govuk-header__link govuk-header__link--service-name">
                    Secure Message Service
                </a>
            </div>
        </div>
    </header>
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper " id="main-content" role="main">

            <!-- <div class="das-notification das-notification--warning" tabindex="-1">
                <h3 class="govuk-heading-m">WARNING</h3>
                <p class="das-notification__body">This tool is for development purposes only.</p>
            </div> -->

            <div class="govuk-warning-text">
                <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                <strong class="govuk-warning-text__text">
                    <span class="govuk-warning-text__assistive">Warning</span>
                    This tool is for development purposes only.
                </strong>
            </div>

            @RenderBody()
        </main>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

</body>

</html>