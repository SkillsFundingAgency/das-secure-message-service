@{
    ViewData["Title"] = "Your message";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Your message</h1>

            @if (@ViewBag.MessageExists)
            {
                <p class="govuk-body">Click <strong>reveal</strong> to view your message.</p>

                <form method="POST">
                    <button type="submit" id="submit" class="govuk-button">
                        Reveal
                    </button>
                </form>      
            }
            else
            {
                <p class="govuk-body">This is not the message you're looking for...</p>
                <p class="govuk-body"><a href="@Url.Content("/")" class="govuk-link">Click here to create a new message</a></p>
            } 
    </div>
</div>